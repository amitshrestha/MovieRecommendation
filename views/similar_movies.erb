
<div id="main_content"> 
    <div class="movie_list">
    <% @recommended_movies.each do |key, detail|%>
        <div class="movie">
        <p style="text-align:center;"><img src=<%=detail['Image_url']%>></img></p>
        <h3><%= detail['Title']%></h3>
        <h4 id='info'>Info</h4>
        <h5> Genre: <%= detail['Genre']%></h5>
        <h5> Director: <%= detail['Director']%></h5>
        <h5> Studio: <%= detail['Studio']%></h5>
        <h5> Release year: <%= detail['Release year']%></h5>
        <h5> Rating: <%= detail['Rating']%></h5>
        <h5><a href=<%= detail['URL'] %>>URL: <%= detail['URL']%></a></h5>
        <h5 id='desc'><%= detail['Description']%></h5>
        </div>
        <%end%>
    </div>
 </div>


